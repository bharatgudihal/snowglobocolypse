{
    "AWSTemplateFormatVersion": "2010-09-09",

    "Metadata": {
        "CloudCanvas": {
            "Id": "$Revision: #6 $"
        }
    },

    "Parameters": {

        "ProjectResourceHandler": {
            "Type": "String",
            "Description": "Service token of the custom resource handler."
        },

        "ConfigurationBucket": {
            "Type": "String",
            "Description": "Bucket that contains configuration data."
        },

        "ConfigurationKey": {
            "Type": "String",
            "Description": "Location in the configuration bucket of configuration data."
        },

        "ReadCapacityUnits": {
            "Type": "Number",
            "Default": "1",
            "Description": "Number of game state reads per second."
        },

        "WriteCapacityUnits": {
            "Type": "Number",
            "Default": "1",
            "Description": "Number of game state writes per second."
        }
    },

    "Resources": {

        "MainBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": { },
            "Metadata": {
                "CloudCanvas": {
                    "FunctionAccess": [
                        {
                            "FunctionName": "DontDieMain",
                            "Action": "s3:*",
                            "ResourceSuffix": "*"
                        }
                    ],

                    "PlayerAccess": {
                        "Action": "s3:*",
                        "ResourceSuffix": "*"
                    },

                    "PopulateMainBucket": {
                        "Action": "s3:*",
                        "ResourceSuffix": "*"
                    }
                }
            }
        },

        "PlayerTable": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "PlayerID",
                        "AttributeType": "S"
                    }
                ],
                "KeySchema": [
                    {
                        "AttributeName": "PlayerID",
                        "KeyType": "HASH"
                    }
                ],
                "ProvisionedThroughput": {
                    "ReadCapacityUnits": { "Ref": "ReadCapacityUnits" },
                    "WriteCapacityUnits": { "Ref": "WriteCapacityUnits" }
                }
            },
            "Metadata": {
                "CloudCanvas": {
                    "FunctionAccess": [
                        {
                            "FunctionName": "DontDieMain",
                            "Action": "dynamodb:*"
                        }
                    ]
                }
            }
        },

        "DontDieMainConfiguration": {
            "Type": "Custom::LambdaConfiguration",
            "Properties": {
                "ServiceToken": { "Ref": "ProjectResourceHandler" },
                "ConfigurationBucket": { "Ref": "ConfigurationBucket" },
                "ConfigurationKey": { "Ref": "ConfigurationKey" },
                "FunctionName": "DontDieMain",
                "Runtime": "nodejs",
                "Settings": {
                    "MainBucket": { "Ref": "MainBucket" },
                    "PlayerTable": { "Ref": "PlayerTable" }
                }
            }
        },

        "DontDieMain": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Handler": "apps/dont-die-main/app.handler",
                "Role": { "Fn::GetAtt": [ "DontDieMainConfiguration", "Role" ] },
                "Runtime": { "Fn::GetAtt": [ "DontDieMainConfiguration", "Runtime" ] },
                "Timeout": 10,
                "MemorySize": 1024,
                "Code": {
                    "S3Bucket": { "Fn::GetAtt": [ "DontDieMainConfiguration", "ConfigurationBucket" ] },
                    "S3Key": { "Fn::GetAtt": [ "DontDieMainConfiguration", "ConfigurationKey" ] }
                }
            },
            "Metadata": {
                "CloudCanvas": {
                    "PlayerAccess": {
                        "Action": "lambda:InvokeFunction"
                    }
                }
            }
        },

        "PlayerAccess": {
            "Type": "Custom::PlayerAccess",
            "Properties": {
                "ServiceToken": { "Ref": "ProjectResourceHandler" },
                "ConfigurationBucket": { "Ref": "ConfigurationBucket" },
                "ConfigurationKey": { "Ref": "ConfigurationKey" },
                "ResourceGroupStack": { "Ref": "AWS::StackId" }
            },
            "DependsOn": "DontDieMain"
        },
        
        "PopulateMainBucketAccess": {
            "Type": "Custom::Access",
            "Properties": {
                "ServiceToken": { "Ref": "ProjectResourceHandler" },
                "ConfigurationBucket": { "Ref": "ConfigurationBucket" },
                "ConfigurationKey": { "Ref": "ConfigurationKey" },
                "ResourceGroupStack": { "Ref": "AWS::StackId" },
                "PhysicalResourceId": { "Fn::Join": [ "CloudCanvas:PopulateMainBucketAccess:", [ {"Ref": "AWS::StackName"} ] ] },
                "RoleLogicalId": "ProjectResourceHandlerExecution",
                "MetadataKey": "PopulateMainBucket",
                "UsePropagationDelay": "true"
            },
            "DependsOn": "MainBucket"
        },
        
        "PopulateMainBucket": {
            "Type": "Custom::PopulateMainBucket",
            "Properties": {
                "ServiceToken": { "Ref": "ProjectResourceHandler" },
                "MainBucket": { "Ref": "MainBucket" }
            },
            "DependsOn": "PopulateMainBucketAccess"
        }
    }

}